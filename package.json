{
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "pos/apps/electron",
    "pos/packages/server"
  ],
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run dev",
    "dev:pos:server": "npm --workspace pos/packages/server run dev",
    "dev:pos:electron": "npm --workspace pos/apps/electron run dev",
    "clean:all": "rimraf node_modules frontend/node_modules backend/node_modules pos/apps/electron/node_modules pos/packages/server/node_modules ~/.electron-gyp",
    "pos:clean-rebuild": "npm run clean:all && npm install && npm --workspace pos/apps/electron run rebuild:native:c20",
    "build": "npm --workspace backend run build && npm --workspace frontend run build",
    "build:frontend": "npm --workspace frontend run build",
    "build:backend": "npm --workspace backend run build",
    "start:backend": "npm --workspace backend run start",
    "preview:frontend": "npm --workspace frontend run preview",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f db",
    "db:ps": "docker compose ps",
    "db:exec": "docker compose exec db psql -U kgolf -d kgolf_app",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:report": "playwright show-report",
    "test:e2e:full": "concurrently -k -s first \"npm:dev:frontend\" \"npm:dev:backend\" \"npm:test:e2e:wait\"",
    "test:e2e:wait": "wait-on http://localhost:5173 http://localhost:8080 && playwright test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^25.0.3",
    "concurrently": "^8.2.2",
    "wait-on": "^9.0.3"
  }
}
