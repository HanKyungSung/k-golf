{
  "private": true,
  "workspaces": ["frontend", "backend", "pos"],
  "scripts": {
    "dev": "concurrently \"npm:dev:frontend\" \"npm:dev:backend\"",
    "dev:frontend": "npm --workspace frontend run dev",
    "dev:backend": "npm --workspace backend run dev",
    "dev:pos:server": "npm --workspace pos/packages/server run dev",
    "dev:pos:electron": "npm --workspace pos/apps/electron run dev",
    "build": "npm --workspace backend run build && npm --workspace frontend run build",
    "build:frontend": "npm --workspace frontend run build",
    "build:backend": "npm --workspace backend run build",
    "start:backend": "npm --workspace backend run start",
    "preview:frontend": "npm --workspace frontend run preview",
    "lint": "npm --workspace backend run lint",
    "db:up": "docker compose up -d db",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f db",
    "db:ps": "docker compose ps",
    "db:exec": "docker compose exec db psql -U kgolf -d kgolf_app"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
