# Server
PORT=8080
NODE_ENV=development
CORS_ORIGIN=http://localhost:5173,http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://kgolf:kgolf_password@localhost:5432/kgolf_app

# Email (optional; if unset, emails are logged to console)
GMAIL_USER=your_gmail_username@gmail.com
GMAIL_APP_PASSWORD=your_gmail_app_password
EMAIL_FROM=no-reply@example.com

# (Optional) SMTP alternative (uncomment if using custom SMTP instead of Gmail)
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=

# Frontend origin used in links sent via email
FRONTEND_ORIGIN=http://localhost:5173

# Seeding (optional; defaults create 4 rooms)
# Seed a test user only in non-production, or set SEED_ENABLE_TEST_USER=true to force in prod/staging
# SEED_ENABLE_TEST_USER=true
SEED_TEST_EMAIL=test@example.com
SEED_TEST_NAME=Test User
SEED_TEST_PASSWORD=password123