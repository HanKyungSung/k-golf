{
  "name": "k-golf-backend",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:test": "DATABASE_URL=postgresql://kgolf:kgolf_password@localhost:5432/k_golf_test tsx watch src/server.ts",
    "build": "tsc -p tsconfig.json",
    "build:frontend": "cd ../frontend && npm run build",
    "build:full": "npm run build && npm run build:frontend && rm -rf dist/public && cp -r ../frontend/dist dist/public",
    "start": "node dist/src/server.js",
    "start:full": "npm run build:full && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:db": "jest tests/db",
    "test:e2e": "jest tests/e2e",
    "test:coverage": "jest --coverage",
    "prisma:init": "prisma init",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:dev": "DATABASE_URL=postgresql://kgolf:kgolf_password@localhost:5432/kgolf_app tsx prisma/seed.ts",
    "db:seed:test": "DATABASE_URL=postgresql://kgolf:kgolf_password@localhost:5432/k_golf_test tsx prisma/seed.ts",
    "db:setup-test": "chmod +x scripts/setup_test_db.sh && ./scripts/setup_test_db.sh"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@types/pino": "^7.0.5",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "nodemailer": "^6.9.13",
    "pino": "^9.9.0",
    "pino-pretty": "^11.2.2",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.0",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "prisma": "^5.16.2",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  }
}
