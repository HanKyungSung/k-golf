{
  "compilerOptions": {
    "target": "ES2022",
  "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "types": ["node"],
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment"
  },
  "include": [
    "src/main.ts",
    "src/preload.ts",
    "src/core/**/*"
  ],
  "exclude": [
    "src/renderer" 
  ]
}
