{
  "name": "pos-electron",
  "private": true,
  "version": "0.1.0",
  "main": "dist/main.js",
  "build": {
    "appId": "com.kgolf.pos",
    "productName": "K-Golf POS",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*",
      ".env"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.business",
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage",
      "category": "Office"
    }
  },
  "scripts": {
    "dev": "ELECTRON_DEV=1 concurrently -k \"tsc -w\" \"npm:bundle:renderer\" \"npm:copyhtml:watch\" \"wait-on dist/main.js dist/renderer/index.js dist/renderer/index.html && electron dist/main.js\"",
    "build": "tsc -p tsconfig.build.json && npm run copyhtml && npm run bundle:renderer:prod",
    "start": "node dist/main.js",
    "rebuild:native": "electron-rebuild -f --only better-sqlite3,keytar",
    "bundle:renderer": "esbuild src/renderer/index.tsx --bundle --format=esm --platform=browser --outfile=dist/renderer/index.js --sourcemap --watch",
    "bundle:renderer:prod": "esbuild src/renderer/index.tsx --bundle --format=esm --platform=browser --minify --outfile=dist/renderer/index.js",
    "copyhtml": "mkdirp dist/renderer && cpy src/renderer/index.html dist/renderer --flat",
    "copyhtml:watch": "npm run copyhtml && chokidar src/renderer/index.html -c 'npm run copyhtml'",
    "pack": "electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:win": "npm run build && electron-builder --win",
    "dist:linux": "npm run build && electron-builder --linux"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "better-sqlite3": "^11.0.0",
    "dotenv": "^16.4.5",
    "electron-log": "^5.1.0",
    "keytar": "^7.9.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.23.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^10.0.0",
    "chokidar-cli": "^3.0.0",
    "concurrently": "^8.2.0",
    "cpy-cli": "^6.0.0",
    "electron": "35.7.5",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "esbuild": "^0.23.0",
    "mkdirp": "^3.0.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0",
    "wait-on": "^7.2.0"
  }
}
